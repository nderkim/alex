{
  "name": "alex",
  "version": "0.0.0",
  "bin": "./bin.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development node scripts/watch",
    "build": "cross-env NODE_ENV=production node scripts/build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "check": "npm run format && npm run lint && npm run tsc",
    "tsc": "npm run tsc:client && npm run tsc:common && npm run tsc:server",
    "tsc:client": "tsc --noEmit -p src/client",
    "tsc:common": "tsc --noEmit -p src/common",
    "tsc:server": "tsc --noEmit -p src/server",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "clean": "node scripts/clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "html-webpack-plugin": "^5.2.0",
    "pkg": "^4.4.9",
    "prettier": "^2.2.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-dev-server": "^3.11.2"
  }
}
